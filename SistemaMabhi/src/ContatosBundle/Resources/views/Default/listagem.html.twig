{% extends '::base.html.twig' %}

{% block body %}
    <style>
        .cont{
            overflow: hidden;
        }
        .listaContatos{
            text-decoration: none;
        }
    </style>
    <div style="text-align: center;">
        {% if rota == "ativos" %}
            <h2>Contatos Ativos</h2>
        {% else %}
            <h2>Contatos Desativados</h2>
        {% endif %}
    </div>
    <div style="margin: 10px;" class="cont row">

        <table class="table table-hover">

            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Tell</th>
                <th scope="col">Cell</th>
                <th scope="col">Email</th>
                <th scope="col">Bairro</th>
                <th scope="col">Editar</th>
                <th scope="col">Desativar</th>
            </tr>
            </thead>
            <tbody>

                {% for contato in contatos %}
                <tr>
                    <th>{{ contato.id }}</th>
                    <th>{{ contato.nome }}</th>
                    <th>{{ contato.tell }}</th>
                    <th>{{ contato.cell }}</th>
                    <th>{{ contato.email }}</th>
                    <th>{{ contato.bairro }}</th>
                    <th>
                        <a href="alterar/{{ contato.id }}"><button type="button" class="btn btn-info">Editar</button></a>
                    </th>
                    <th>
                        {% if contato.status == "1" %}
                            <a href="desativar/{{ contato.id }}"><button type="button" class="btn btn-warning">Desativar</button></a>
                        {% else %}
                            <a href="ativar/{{ contato.id }}"><button type="button" class="btn btn-warning">Ativar</button></a>
                        {% endif %}
                    </th>
                </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>

{%  endblock %}
