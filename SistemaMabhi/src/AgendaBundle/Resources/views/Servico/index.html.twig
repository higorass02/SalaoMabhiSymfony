{% extends '::base.html.twig' %}

{% block body %}
    <style>
        .cont{
            overflow: hidden;
        }
        .listaContatos{
            text-decoration: none;
        }
    </style>

    <div style="text-align: center;">
        {% if mensagem == "ativos" %}
            <h2>Serviços Ativos</h2>
        {% else %}
            <h2>Serviços Desativados</h2>
        {% endif %}
    </div>
    <div style="margin: 10px;" class="cont row">
        <div class="col-2"></div>
        <table class="table table-hover col-8">

            <thead>
            <tr>
                {#<th scope="col">ID</th>#}
                <th scope="col">Nome</th>
                <th scope="col">Preço</th>
                <th scope="col">Data Ultima Atualização</th>
                <th scope="col">Editar</th>
                <th scope="col">Desativar</th>
            </tr>
            </thead>
            <tbody>

            {% for servico in servicos %}
                <tr>
                    {#<th>{{ servico.id }}</th>#}
                    <td id="nome">{{ servico.Nomeservico }}</td>
                    <td id="preco">{{ servico.Preco }}</td>
                    <form id="formtab" method="post">
                    <td id="nomeinput" hidden><input class="form-control" type="text" id="nome" name="nome" value="{{ servico.Nomeservico }}"></td>
                    <td id="precoinput" hidden><input class="form-control" type="text" id="preco" name="preco" value="{{ servico.Preco }}"></td>

                    {#<th>{{ servico.datacriacao }}</th>#}
                    <td>{{ servico.dtAtualizacao|date('d/m/Y') }}</td>
                    <td>
                        <button type="button" class="btn btn-info" id="btn-editar" >Editar</button>
                        <button type="button" class="btn btn-info" id="btn-salvar" hidden>Salvar</button>
                    </td>
                    <input hidden name="invisivel" value="{{ servico.id }}">
                    </form>
                    <td>
                        {% if servico.Status == "1" %}
                            <a href="desativar/{{ servico.id }}"><button type="button" class="btn btn-warning">Desativar</button></a>
                        {% else %}
                            <a href="ativar/{{ servico.id }}"><button type="button" class="btn btn-warning">Ativar</button></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

            <tr id="cadastro" hidden>
                <form action="../Servico/novo" method="post" id="form">
                    <td><input class="form-control" type="text" id="nome" name="nome" placeholder="Nome servico"></td>
                    <td><input class="form-control" type="text" id="preco" name="preco" placeholder="preco"></td>
                    <td></td>
                    <td><input class="btn btn-success" type="submit" value="Cadastrar"></td>
                    <td></td>
                </form>
            </tr>
            </tbody>

        </table>
        <div class="col-2"></div>
        <div class="col-4"></div>
        <div id="trbtnAgendar" class="col-4">
            {#<td colspan="4">#}
            <button type="button" id="servico" onclick="xamaServiço()" class="btn text-white bg-info" style="width: 90%; margin-left: 5%; margin-right: 5%;">Novo Serviço</button>
            {#</td>#}
        </div>
        <div class="col-4"></div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
    <script>
        function xamaServiço() {
            document.getElementById('cadastro').removeAttribute("hidden");
            document.getElementById('trbtnAgendar').setAttribute("hidden", true);
        }
        $('#btn-editar').click(function () {
            $('#nome').attr("hidden", true)
            $('#nomeinput').attr("hidden", false)
            $('#preco').attr("hidden", true)
            $('#precoinput').attr("hidden", false)
            $('#btn-editar').attr("hidden", true)
            $('#btn-salvar').attr("hidden", false)
        })
        $('#btn-salvar').click(function () {
            $('#formtab').submit();
        })

    </script>
{%  endblock %}
